<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-filter"></div>
    <div class="carousel-item active">
      <img class="d-block w-100" src='https://source.unsplash.com/4s_5_9mInDo' alt="First slide">
      <h2 class="carousel-middle">Upload your work and start selling your apparel within minutes.</h2>
      <a href="<%= new_tshirt_path %>" class="btn btn-outline-light btn-lg carousel-btn">Start selling</a>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src='https://source.unsplash.com/TT-ROxWj9nA' alt="Second slide"/>
      <h2 class="carousel-middle">Browse our collection featuring designs from independent artists from around the globe.</h2>
      <a href="<%= tshirts_path %>" class="btn btn-outline-light btn-lg carousel-btn">Browse collection</a>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src='https://source.unsplash.com/DsAjH9B24G8' alt="Third slide"/>
      <h2 class="carousel-middle">Already own a store? See all the ways we can help.</h2>
      <a href="<%= root_path %>" class="btn btn-outline-light btn-lg carousel-btn">More information</a>
    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<br>
<div class="container">
  <h2>Featured Products</h2>
  <div class="row">
    <% @tshirts.each do |tshirt| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card">
          <% overlay = tshirt.photo.url[61..-1] %>
          <% img_white = "https://res.cloudinary.com/dju9xcsec/image/upload/l_#{overlay},w_400/v1553144623/White.jpg" %>
          <% img_black = "https://res.cloudinary.com/dju9xcsec/image/upload/l_#{overlay},w_400/v1553144618/Black.jpg" %>
          <div class="img-container">
            <img class="img-white" src="<%= img_white %>", height=290, crop: :fill  alt="">
            <img class="img-black" src="<%= img_black %>", height=290, crop: :fill  alt="">
          </div>
          <div class="card-details">
            <h1><%= link_to tshirt.name, tshirt_path(tshirt) %></h1>
            <h1><%= humanized_money_with_symbol(tshirt.price) %></h1>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
