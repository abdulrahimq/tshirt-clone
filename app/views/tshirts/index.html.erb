<br>
<div class="container">
  <div class="row">
    <div class="col-sm-1 col-md-2">
      <div class="facet-menu">
        <ul class="facet-list">
          <h5>Categories</h5>
          <% Tshirt.tagsArray(15).each do |tag| %>
          <li class="facet-item"><%= link_to tag, tshirts_path(:query => tag) %></li>
          <% end %>
        </ul>
      </div>
    </div>
    
    <div class="col-sm-11 col-md-10">
      <h4>Browse our catalogue from independent artists</h4>
      <div class="row">
        <% @tshirts.each do |tshirt| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <% overlay = tshirt.photo.url[61..-1] %>
            <% img_white = "https://res.cloudinary.com/dju9xcsec/image/upload/l_#{overlay},w_400/v1553144623/White.jpg" %>
            <% img_black = "https://res.cloudinary.com/dju9xcsec/image/upload/l_#{overlay},w_400/v1553144618/Black.jpg" %>
            <div class="img-container">
              <div class="img-white img-tshirt" style="background-image: url('<%= img_white %>');"></div>
              <div class="img-black img-tshirt" style="background-image: url('<%= img_black %>');"></div>
            </div>
            <div class="card-details">
              <h1><%= link_to tshirt.name, tshirt_path(tshirt) %></h1>
              <h1><%= humanized_money_with_symbol(tshirt.price) %></h1>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
